FloatLayout:

    MDLabel:
        text: "First select table number then Load Food"
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .9}
        font_style: "H5"
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1
    MDIconButton:
        icon: "images/turtlebot_icon.png"
        icon_size: "45dp"
        pos_hint: {"center_x": .85, "center_y": .9}
    MDIconButton:
        icon: "images/ros_icon.png"
        icon_size: "60dp"
        pos_hint: {"center_x": .95, "center_y": .9}

    MDRaisedButton:
        id: load_food
        text: "Load Food"
        md_bg_color: "green"
        pos_hint: {"center_x": .9, "center_y": .7} 
        on_press: app.load_food(*args)
    MDRaisedButton:
        id: unload_food
        text: "Unload Food"
        md_bg_color: "green"
        pos_hint: {"center_x": .9, "center_y": .63} 
        on_press: app.unload_food(*args)
    MDRaisedButton:
